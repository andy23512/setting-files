alias mrb="cr; dc restart backend; dclb"

# copy

function copy() { cat $@ | pbcopy; }

# setup python project

function setup_python {
	mkdir $1
	cd $1
	git init
	python3 -m venv ~/.virtualenvs/$1
	source ~/.virtualenvs/$1/bin/activate
}

