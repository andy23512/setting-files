### Innocent Starter

function innocent_starter {
	cd $1
	tmux new -A -d -s $2 -c $1
	tx $2
}

alias isa="accel_shooter_starter"
alias isw="innocent_starter ~/git/website w"
alias iss="innocent_starter ~/git/space s"
alias isi="innocent_starter ~/git/ihis i"
alias isd="innocent_starter ~/git/dicom-ct d"
alias ism="innocent_starter ~/git/aether-mono m"
alias isv="innocent_starter ~/git/vfss v"

function website_service_starter {
	cd ~/git/website
	tmux new -A -d -s w -c ~/git/website
	tmux rename-window 'w'
	tmux send-keys 'cf; cf; WEB_NETWORK_LOCATION=localhost yarn start' C-m
	tmux split-window -l 50%
	tmux send-keys 'sleep 10 && ./bin/dc -f docker-compose.yaml -f docker-compose.dev.yaml up -d' C-m
	tx w
}

alias wss="website_service_starter"

### Accel Shooter

function accel_shooter_starter {
	cd ~/git/accel-shooter
	tmux new -A -d -s a -c ~/git/accel-shooter
	tmux rename-window 'acst'
	tmux send-keys 'sudo openfortivpn -c ~/vpn.conf' C-m
	tmux split-window -l 83%
	tmux send-keys 'as meetingTrack && exit' C-m
	tmux split-window -l 80%
	tmux send-keys 'acst-server' C-m
	tmux split-window -l 75%
	tmux send-keys 'colima start && exit' C-m
	tmux split-window -l 66%
	tmux send-keys 'sleep 10 && as track' C-m
	tmux split-window -l 50%
	tmux send-keys 'sleep 10 && as reviewTrack' C-m
	tx a
}

